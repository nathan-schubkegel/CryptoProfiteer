    bool hadSalesNeedingTaxAssociation = false;
    foreach (var t in Model.SalesNeedingTaxAssociation(null))
    {
      var usd = "USD";
      var isExchange = t.PaymentCoinType != "USD";
      hadSalesNeedingTaxAssociation = true;
